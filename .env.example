# ===== ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ =====

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# URL NAVIGATOR/VOCALIS сервера (без /process в конце)
NAVIGATOR_SERVER_URL=https://your-navigator-server.com


# ===== НЕОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ =====

# Название фреймворка (по умолчанию: navigator_vocalis)
NAVIGATOR_FRAMEWORK_NAME=navigator_vocalis

# URL базы данных (если не указана, используется SQLite)
# Формат для PostgreSQL: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Ссылка на оплату/активацию доступа (для BotHelp или другой платёжной системы)
# PAYMENT_LINK=https://example.com/payment
